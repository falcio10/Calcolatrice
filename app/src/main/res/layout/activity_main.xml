<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/editTextN1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        tools:layout_editor_absoluteX="157dp"
        tools:layout_editor_absoluteY="36dp" />

    <EditText
        android:id="@+id/editTextN2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        tools:layout_editor_absoluteX="157dp"
        tools:layout_editor_absoluteY="99dp" />

    <TextView
        android:id="@+id/textViewN1"
        android:layout_width="75dp"
        android:layout_height="45dp"
        android:text="Valore1"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="36dp" />

    <TextView
        android:id="@+id/textViewN2"
        android:layout_width="76dp"
        android:layout_height="47dp"
        android:text="Valore2"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="15dp"
        tools:layout_editor_absoluteY="99dp" />

    <TextView
        android:id="@+id/textViewRisultato"
        android:layout_width="210dp"
        android:layout_height="55dp"
        android:background="#ED9A9A"
        android:textColor="#FF0000"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="157dp"
        tools:layout_editor_absoluteY="173dp" />

    <Button
        android:id="@+id/btnsomma"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#A18F8F"
        android:text="+"
        android:textColor="#000000"
        android:textSize="20sp"
        app:iconTint="#EFDFDF"
        app:rippleColor="#DABEBE"
        tools:layout_editor_absoluteX="29dp"
        tools:layout_editor_absoluteY="264dp" />
</androidx.constraintlayout.widget.ConstraintLayout>